<%= form_for(:episode, :url => {:controller => @controller, :action => @action, :season_id => @season.id}) do |f| %>
  <div class="ui grid">
    <div class="eight wide column">
      <div class="ui form">
        <div class="field">
          <label>EPISODE NO.</label>
          <%= f.text_field :episode_no, placeholder: "Episode No", style: "height:38px"%>
          <br>
        </div>
      </div><br>

      <div class="ui form">
        <div class="field">
          <label>SHOW EPISODE NO.</label>
          <%= f.text_field :showep_no, placeholder: "Show Episode No", style: "height:38px"%>
          <br>
        </div>
      </div><br>

      <div class="ui form">
        <div class="field">
          <label>TITLE</label>
          <%= f.text_field :title, :placeholder => "Title", style: "height:38px" %>
        </div>
      </div><br>

      <div class="ui form">
        <div class="field">
          <label>AIR DATE</label>
          <%= f.text_field :air_date, :placeholder => "Air Date", style: "height:38px" %>
        </div>
      </div>

    </div>
  </div>
  <br>
  <button type="submit" class="ui green button submit-button">Submit</button>
  <%= link_to "Back", season_path(@season), style: 'color:#fff;', class: 'ui grey button' %>
<% end %>
