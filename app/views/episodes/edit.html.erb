<%= render :file=> 'app/views/partials/header.html.erb' %>

<div class="ui basic segment" style="margin-top: 90px;">
  <%= render :file=> 'app/views/partials/message.html.erb' %>
  <div class="ui basic segment" style="margin: auto; width: 70%;">
    <h1 class="ui header">
      <div><i class="edit icon"></i>Edit Episode of <em><%= @show.name %>, Season <%= @season.season_no %></em></div>
    </h1>

    <%= form_for @episode do |f| %>
      <div class="ui grid">
        <div class="eight wide column">
          <div class="ui form">
            <div class="field">
              <label>EPISODE NO.</label>
              <%= f.text_field :episode_no, placeholder: "Episode No", style: "height:38px"%>
              <br>
            </div>
          </div><br>

          <div class="ui form">
            <div class="field">
              <label>SHOW EPISODE NO.</label>
              <%= f.text_field :showep_no, placeholder: "Show Episode No", style: "height:38px"%>
              <br>
            </div>
          </div><br>

          <div class="ui form">
            <div class="field">
              <label>TITLE</label>
              <%= f.text_field :title, :placeholder => "Title", style: "height:38px" %>
            </div>
          </div><br>

          <div class="ui form">
            <div class="field">
              <label>AIR DATE</label>
              <%= f.text_field :air_date, :placeholder => "Air Date", style: "height:38px" %>
            </div>
          </div>

        </div>
      </div>
        <br>
        <button type="submit" class="ui green button submit-button">Submit</button>
        <div class="ui grey button">
          <%= link_to "Back", season_path(@season), style: 'color:#fff;' %>
        </div>
    <% end %>
  </div>
</div>
