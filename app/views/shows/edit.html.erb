<%= render :file=> 'app/views/partials/header.html.erb' %>

<div class="ui basic segment" style="margin-top: 90px;">
  <%= render :file=> 'app/views/partials/message.html.erb' %>
  <div class="ui basic segment" style="margin: auto; width: 70%;">
    <h1 class="ui header">
      <div><i class="edit icon"></i>Edit Show</div>
    </h1>

  <%= form_for @show do |f| %>
    <div class="ui grid">
      <div class="eight wide column">
        <div class="ui form">
          <div class="field">
            <label>NAME</label>
            <%= f.text_field :name, placeholder: "Show Name", style: "height:38px"%>
            <br>
          </div>
        </div><br>

        <div class="ui form">
          <div class="field">
            <label>NETWORK</label>
            <%= f.text_field :network, :placeholder => "Show Network", style: "height:38px" %>
          </div>
        </div><br>

        <div class="ui form">
          <div class="field">
            <label>START YEAR</label>
            <%= f.text_field :start_year, :placeholder => "Start Year", style: "height:38px" %>
          </div>
        </div><br>

        <div class="ui form">
          <div class="field">
            <label>END YEAR</label>
            <%= f.text_field :end_year, :placeholder => "End Year", style: "height:38px" %>
          </div>
        </div>

      </div>
    </div>
      <br>
      <button type="submit" class="ui green button submit-button">Submit</button>
      <div class="ui grey button">
        <%= link_to "Back", show_path(@show), style: 'color:#fff;' %>
      </div><br><br>
      <div class="ui red button">
        <%= link_to "Delete".html_safe, {action: "destroy", id: @show.id}, method: :delete, style: 'color:#fff;' %>
      </div>
  <% end %>
</div>
</div>
