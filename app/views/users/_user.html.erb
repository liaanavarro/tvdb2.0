<%= form_for @user do |f| %>
  <div class="ui grid">
    <div class="eight wide column">
      <div class="ui form">
        <div class="field">
          <label>NAME</label>
          <%= f.text_field :name, placeholder: "Full Name", style: "height:38px"%>
          <% if @user.errors[:name].any? %>
            <div class="ui basic red pointing prompt label transition visible">
              <%= "Name " << @user.errors[:name].join(", ") %>
            </div>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
  <br>
  <button type="submit" class="ui green button submit-button">Save Changes</button>
<% end %>
